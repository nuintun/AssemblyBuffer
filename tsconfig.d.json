{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "pretty": true,
    "newLine": "LF",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noEmitHelpers": true,
    "importHelpers": false,
    "noUnusedLocals": true,
    "removeComments": false,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "noUnusedParameters": true,
    "declarationDir": "typings",
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  }
}
