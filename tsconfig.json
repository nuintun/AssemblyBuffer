{
  "compileOnSave": false,
  "compilerOptions": {
    "pretty": true,
    "target": "ES5",
    "newLine": "LF",
    "module": "ESNext",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noEmitHelpers": true,
    "importHelpers": false,
    "noUnusedLocals": true,
    "removeComments": false,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}